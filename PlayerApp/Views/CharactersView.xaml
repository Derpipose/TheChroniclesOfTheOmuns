<UserControl x:Class="PlayerApp.Views.CharactersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="White" Margin="20">
        <StackPanel>
            <TextBlock Text="Characters" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <!-- Character List -->
            <DataGrid ItemsSource="{Binding Characters}"
                      SelectedItem="{Binding SelectedCharacter}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      Height="400"
                      Margin="0,0,0,20">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Class" Binding="{Binding CharacterClass.Name}" Width="150"/>
                    <DataGridTextColumn Header="Race" Binding="{Binding CharacterRace.Name}" Width="150"/>
                    <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal">
                <Button Content="New Character" 
                        Command="{Binding NewCharacterCommand}"
                        Padding="15,8" FontSize="12" Margin="0,0,10,0"/>
                <Button Content="Edit" 
                        Command="{Binding EditCharacterCommand}"
                        Padding="15,8" FontSize="12" Margin="0,0,10,0"/>
                <Button Content="Delete" 
                        Command="{Binding DeleteCharacterCommand}"
                        Padding="15,8" FontSize="12" 
                        Foreground="White" Background="Red"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
