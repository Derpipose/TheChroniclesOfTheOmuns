<UserControl x:Class="PlayerApp.Views.CharactersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="{StaticResource BackgroundBrush}" Margin="30">
        <StackPanel>
            <TextBlock Text="Characters" FontSize="28" FontWeight="Bold" 
                       Foreground="{StaticResource PrimaryBrush}"
                       Margin="0,0,0,25"/>
            
            <!-- Character Cards -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="500" Margin="0,0,0,20">
                <ItemsControl ItemsSource="{Binding Characters}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="280" Margin="0,0,20,20"
                                    Background="{StaticResource SurfaceBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Effect="{StaticResource CardShadow}"
                                    Cursor="Hand"
                                    MouseDown="CharacterCard_MouseDown"
                                    Padding="20">
                                <StackPanel>
                                    <!-- Character Name -->
                                    <TextBlock Text="{Binding Name}" 
                                               FontSize="18" FontWeight="Bold"
                                               Foreground="{StaticResource PrimaryBrush}"
                                               Margin="0,0,0,12"
                                               TextTrimming="CharacterEllipsis"/>
                                    
                                    <!-- Character Details -->
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <!-- Class -->
                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Text="Class:" FontWeight="SemiBold" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontSize="11"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                   Text="{Binding CharacterClass.Name}" 
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   Margin="5,0,0,0"/>
                                        
                                        <!-- Race -->
                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                   Text="Race:" FontWeight="SemiBold" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontSize="11"
                                                   Margin="0,6,0,0"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1"
                                                   Text="{Binding CharacterRace.Name}" 
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   Margin="5,6,0,0"/>
                                    </Grid>
                                    
                                    <!-- Level Badge -->
                                    <Border Background="{StaticResource SecondaryBrush}" 
                                            CornerRadius="20" 
                                            Padding="12,6"
                                            Margin="0,0,0,15"
                                            Width="80">
                                        <TextBlock Text="{Binding Level, StringFormat='Level {0}'}" 
                                                   Foreground="White" 
                                                   FontWeight="SemiBold"
                                                   FontSize="11"
                                                   TextAlignment="Center"/>
                                    </Border>
                                    
                                    <!-- Quick Stats (abbreviated) -->
                                    <TextBlock Text="STR • CON • DEX" 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="10"
                                               Margin="0,12,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal">
                <Button Content="New Character" 
                        Command="{Binding NewCharacterCommand}"
                        Padding="15,10" FontSize="12" 
                        Margin="0,0,10,0"
                        Style="{StaticResource PrimaryActionButton}"/>
                <Button Content="Edit Selected" 
                        Command="{Binding EditCharacterCommand}"
                        Padding="15,10" FontSize="12" 
                        Margin="0,0,10,0"
                        Style="{StaticResource ModernButtonStyle}"/>
                <Button Content="Delete Selected" 
                        Command="{Binding DeleteCharacterCommand}"
                        Padding="15,10" FontSize="12"
                        Style="{StaticResource DangerButton}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
