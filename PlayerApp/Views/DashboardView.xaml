<UserControl x:Class="PlayerApp.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome to Chronicles of the Omuns" 
                       FontSize="28" FontWeight="Bold" 
                       Margin="0,0,0,20"/>
            
            <TextBlock Text="Select an option from the menu to begin." 
                       FontSize="14" Foreground="Gray" Margin="0,0,0,40"/>
            
            <!-- Main Navigation -->
            <StackPanel Margin="0,0,0,30" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Manage Characters" Padding="20,10" FontSize="14" Margin="0,0,10,0" Command="{Binding GoToCharactersCommand}"/>
            </StackPanel>

            <!-- Database Setup -->
            <TextBlock Text="Database Setup:" FontSize="14" FontWeight="Bold" Margin="0,20,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button Content="Load All Classes" 
                        Command="{Binding LoadClassesCommand}"
                        Padding="15,8" FontSize="12" Margin="0,0,10,0"/>
                <Button Content="Load All Races" 
                        Command="{Binding LoadRacesCommand}"
                        Padding="15,8" FontSize="12"/>
            </StackPanel>
            
            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}" 
                       FontSize="12" 
                       Foreground="Green"
                       TextAlignment="Center"
                       Margin="0,10,0,0"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</UserControl>
