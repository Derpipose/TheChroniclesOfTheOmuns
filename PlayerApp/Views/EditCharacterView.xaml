<UserControl x:Class="PlayerApp.Views.EditCharacterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="{StaticResource BackgroundBrush}" Margin="30">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" MaxWidth="500">
                <!-- Title -->
                <TextBlock Text="Edit Character" FontSize="28" FontWeight="Bold" 
                           Foreground="{StaticResource PrimaryBrush}"
                           Margin="0,0,0,20"/>

                <!-- Name Input -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                    <Label Content="Character Name:" Style="{StaticResource ModernLabelStyle}"/>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                             Height="40" FontSize="12"
                             Style="{StaticResource ModernTextBoxStyle}"/>
                </StackPanel>

                <!-- Class Selection -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                    <Label Content="Class:" Style="{StaticResource ModernLabelStyle}"/>
                    <ComboBox ItemsSource="{Binding Classes}" 
                              SelectedItem="{Binding SelectedClass}"
                              DisplayMemberPath="Name"
                              Height="40" FontSize="12"
                              Style="{StaticResource ModernComboBoxStyle}"/>
                </StackPanel>

                <!-- Race Selection -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                    <Label Content="Race:" Style="{StaticResource ModernLabelStyle}"/>
                    <ComboBox ItemsSource="{Binding Races}" 
                              SelectedItem="{Binding SelectedRace}"
                              DisplayMemberPath="Name"
                              Height="40" FontSize="12"
                              Style="{StaticResource ModernComboBoxStyle}"/>
                </StackPanel>

                <!-- Stats Section -->
                <TextBlock Text="Base Stats (10-20):" FontSize="13" FontWeight="SemiBold" 
                           Foreground="{StaticResource PrimaryBrush}"
                           Margin="0,15,0,12"/>

                <!-- Strength -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="Strength:" Width="110" VerticalAlignment="Center" 
                               FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBox Text="{Binding Strength, UpdateSourceTrigger=LostFocus}" 
                             Width="80" Height="38" FontSize="12"
                             Style="{StaticResource ModernTextBoxStyle}"/>
                </StackPanel>

                <!-- Constitution -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="Constitution:" Width="110" VerticalAlignment="Center" 
                               FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBox Text="{Binding Constitution, UpdateSourceTrigger=LostFocus}" 
                             Width="80" Height="38" FontSize="12"
                             Style="{StaticResource ModernTextBoxStyle}"/>
                </StackPanel>

                <!-- Dexterity -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="Dexterity:" Width="110" VerticalAlignment="Center" 
                               FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBox Text="{Binding Dexterity, UpdateSourceTrigger=LostFocus}" 
                             Width="80" Height="38" FontSize="12"
                             Style="{StaticResource ModernTextBoxStyle}"/>
                </StackPanel>

                <!-- Wisdom -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="Wisdom:" Width="110" VerticalAlignment="Center" 
                               FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBox Text="{Binding Wisdom, UpdateSourceTrigger=LostFocus}" 
                             Width="80" Height="38" FontSize="12"
                             Style="{StaticResource ModernTextBoxStyle}"/>
                </StackPanel>

                <!-- Charisma -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="Charisma:" Width="110" VerticalAlignment="Center" 
                               FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBox Text="{Binding Charisma, UpdateSourceTrigger=LostFocus}" 
                             Width="80" Height="38" FontSize="12"
                             Style="{StaticResource ModernTextBoxStyle}"/>
                </StackPanel>

                <!-- Intelligence -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="Intelligence:" Width="110" VerticalAlignment="Center" 
                               FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBox Text="{Binding Intelligence, UpdateSourceTrigger=LostFocus}" 
                             Width="80" Height="38" FontSize="12"
                             Style="{StaticResource ModernTextBoxStyle}"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Save" 
                            Command="{Binding SaveCommand}"
                            Padding="20,10" FontSize="12" Width="100" Margin="0,0,10,0"
                            Style="{StaticResource PrimaryActionButton}"/>
                    <Button Content="Cancel" 
                            Command="{Binding CancelCommand}"
                            Padding="20,10" FontSize="12" Width="100"
                            Style="{StaticResource ModernButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
