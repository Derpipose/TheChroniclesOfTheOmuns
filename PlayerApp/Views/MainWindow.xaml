<Window x:Class="PlayerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PlayerApp.Views"
        xmlns:vm="clr-namespace:PlayerApp.ViewModels"
        Title="Chronicles of the Omuns - Character Manager"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#ECF0F1">

    <Window.Resources>
        <!-- ViewModel to View Mapping -->
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <local:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CharactersViewModel}">
            <local:CharactersView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:NewCharacterViewModel}">
            <local:NewCharacterView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EditCharacterViewModel}">
            <local:EditCharacterView/>
        </DataTemplate>
    </Window.Resources>

    <DockPanel Background="{StaticResource BackgroundBrush}">
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Height="35" Padding="0,8,0,0">
            <MenuItem Header="View">
                <MenuItem Header="Dashboard" Command="{Binding ShowDashboardCommand}"/>
                <Separator/>
                <MenuItem Header="Exit" Click="MenuItem_Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>

        <!-- Main Content Area - automatic view injection via ContentControl -->
        <ContentControl Content="{Binding CurrentViewModel}" DockPanel.Dock="Bottom"/>
    </DockPanel>
</Window>
