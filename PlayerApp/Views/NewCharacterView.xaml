<UserControl x:Class="PlayerApp.Views.NewCharacterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="White" Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <!-- Title -->
                <TextBlock Text="Create New Character" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

                <!-- Name Input -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                    <Label Content="Character Name:" FontWeight="Bold"/>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                             Height="35" Padding="10,8" FontSize="12"/>
                </StackPanel>

                <!-- Class Selection -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                    <Label Content="Class:" FontWeight="Bold"/>
                    <ComboBox ItemsSource="{Binding Classes}" 
                              SelectedItem="{Binding SelectedClass}"
                              DisplayMemberPath="Name"
                              Height="35" Padding="10,8" FontSize="12"/>
                </StackPanel>

                <!-- Race Selection -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                    <Label Content="Race:" FontWeight="Bold"/>
                    <ComboBox ItemsSource="{Binding Races}" 
                              SelectedItem="{Binding SelectedRace}"
                              DisplayMemberPath="Name"
                              Height="35" Padding="10,8" FontSize="12"/>
                </StackPanel>

                <!-- Stats Section -->
                <TextBlock Text="Base Stats (10-20):" FontSize="14" FontWeight="Bold" Margin="0,10,0,0"/>

                <!-- Strength -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Strength:" Width="100" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
                    <TextBox Text="{Binding Strength, UpdateSourceTrigger=LostFocus}" 
                             Width="80" Height="35" Padding="10,8" FontSize="12"/>
                </StackPanel>

                <!-- Constitution -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Constitution:" Width="100" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
                    <TextBox Text="{Binding Constitution, UpdateSourceTrigger=LostFocus}" 
                             Width="80" Height="35" Padding="10,8" FontSize="12"/>
                </StackPanel>

                <!-- Dexterity -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Dexterity:" Width="100" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
                    <TextBox Text="{Binding Dexterity, UpdateSourceTrigger=LostFocus}" 
                             Width="80" Height="35" Padding="10,8" FontSize="12"/>
                </StackPanel>

                <!-- Wisdom -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Wisdom:" Width="100" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
                    <TextBox Text="{Binding Wisdom, UpdateSourceTrigger=LostFocus}" 
                             Width="80" Height="35" Padding="10,8" FontSize="12"/>
                </StackPanel>

                <!-- Charisma -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Charisma:" Width="100" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
                    <TextBox Text="{Binding Charisma, UpdateSourceTrigger=LostFocus}" 
                             Width="80" Height="35" Padding="10,8" FontSize="12"/>
                </StackPanel>

                <!-- Intelligence -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Intelligence:" Width="100" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
                    <TextBox Text="{Binding Intelligence, UpdateSourceTrigger=LostFocus}" 
                             Width="80" Height="35" Padding="10,8" FontSize="12"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Create" 
                            Command="{Binding CreateCommand}"
                            Padding="20,10" FontSize="12" 
                            Background="Green" Foreground="White" Width="100" Margin="0,0,10,0"/>
                    <Button Content="Cancel" 
                            Command="{Binding CancelCommand}"
                            Padding="20,10" FontSize="12" Width="100"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
