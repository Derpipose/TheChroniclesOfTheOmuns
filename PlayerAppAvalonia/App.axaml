<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PlayerAppAvalonia"
             xmlns:views="clr-namespace:PlayerAppAvalonia.Views"
             xmlns:vms="clr-namespace:PlayerAppAvalonia.ViewModels"
             x:Class="PlayerAppAvalonia.App">

    <Application.Resources>
    </Application.Resources>

    <Application.DataTemplates>
        <!-- ViewModel to View mappings -->
        <DataTemplate DataType="vms:DashboardViewModel">
            <views:DashboardView />
        </DataTemplate>
        <DataTemplate DataType="vms:CharactersViewModel">
            <views:CharactersView />
        </DataTemplate>
        <DataTemplate DataType="vms:NewCharacterViewModel">
            <views:NewCharacterView />
        </DataTemplate>
        <DataTemplate DataType="vms:EditCharacterViewModel">
            <views:EditCharacterView />
        </DataTemplate>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>