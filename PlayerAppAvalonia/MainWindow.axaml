<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PlayerAppAvalonia.MainWindow"
        Title="Chronicles of the Omuns - Character Manager"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Height="35">
            <MenuItem Header="View">
                <MenuItem Header="Dashboard" Click="MenuItem_Dashboard_Click"/>
                <MenuItem Header="Manage Characters" Click="MenuItem_Characters_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="MenuItem_Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>

        <!-- Main Content Area -->
        <ContentControl Name="ContentArea" DockPanel.Dock="Bottom" Background="White" Content="{Binding CurrentView}"/>
    </DockPanel>
</Window>
