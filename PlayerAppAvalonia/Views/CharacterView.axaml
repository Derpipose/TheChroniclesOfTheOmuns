<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PlayerAppAvalonia.Views.CharacterView"
             Background="White">
    <Border Padding="20">
    <StackPanel Spacing="15">
        <TextBlock FontSize="24" FontWeight="Bold" Text="Character Details" />
        
        <!-- Character Name -->
        <StackPanel Spacing="5">
            <TextBlock FontWeight="Bold" Text="Name:" />
            <TextBlock Text="{Binding Character.Name}" />
        </StackPanel>

        <!-- Level -->
        <StackPanel Spacing="5">
            <TextBlock FontWeight="Bold" Text="Level:" />
            <TextBlock Text="{Binding Character.Level}" />
        </StackPanel>

        <!-- Character Class -->
        <StackPanel Spacing="5">
            <TextBlock FontWeight="Bold" Text="Class:" />
            <TextBlock Text="{Binding CharacterClassName}" />
        </StackPanel>

        <!-- Character Race -->
        <StackPanel Spacing="5">
            <TextBlock FontWeight="Bold" Text="Race:" />
            <TextBlock Text="{Binding CharacterRaceName}" />
        </StackPanel>

        <!-- Health -->
        <StackPanel Spacing="5">
            <TextBlock FontWeight="Bold" Text="Health:" />
            <TextBlock Text="{Binding Character.Health}" />
        </StackPanel>

        <!-- Mana -->
        <StackPanel Spacing="5">
            <TextBlock FontWeight="Bold" Text="Mana:" />
            <TextBlock Text="{Binding Character.Mana}" />
        </StackPanel>

        <!-- Stats Section -->
        <Separator Background="#E0E0E0" Margin="0,10" />
        <TextBlock FontSize="18" FontWeight="Bold" Text="Stats" />

        <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
            <!-- Strength -->
            <TextBlock Grid.Row="0" Grid.Column="0" FontWeight="Bold" Text="Strength:" />
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CharacterStats.Strength}" />

            <!-- Constitution -->
            <TextBlock Grid.Row="1" Grid.Column="0" FontWeight="Bold" Text="Constitution:" />
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CharacterStats.Constitution}" />

            <!-- Dexterity -->
            <TextBlock Grid.Row="2" Grid.Column="0" FontWeight="Bold" Text="Dexterity:" />
            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CharacterStats.Dexterity}" />

            <!-- Wisdom -->
            <TextBlock Grid.Row="3" Grid.Column="0" FontWeight="Bold" Text="Wisdom:" />
            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CharacterStats.Wisdom}" />

            <!-- Charisma -->
            <TextBlock Grid.Row="4" Grid.Column="0" FontWeight="Bold" Text="Charisma:" />
            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding CharacterStats.Charisma}" />

            <!-- Intelligence -->
            <TextBlock Grid.Row="5" Grid.Column="0" FontWeight="Bold" Text="Intelligence:" />
            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding CharacterStats.Intelligence}" />
        </Grid>
        </StackPanel>
    </Border>
</UserControl>
