<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PlayerAppAvalonia.Views.CharactersView">

    <Grid Background="#F5F5F5" Margin="30">
        <StackPanel Spacing="20">
            <TextBlock Text="Characters" FontSize="28" FontWeight="Bold" 
                       Foreground="#2C3E50"
                       Margin="0,0,0,5"/>
            
            <!-- Character Cards -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="500">
                <ItemsControl ItemsSource="{Binding Characters}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="280" Margin="0,0,20,20"
                                    Background="White"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Cursor="Hand"
                                    PointerPressed="CharacterCard_PointerPressed"
                                    DoubleTapped="CharacterCard_DoubleTapped">
                                <StackPanel Margin="20" Spacing="12">
                                    <!-- Character Name -->
                                    <TextBlock Text="{Binding Name}" 
                                               FontSize="18" FontWeight="Bold"
                                               Foreground="#2C3E50"
                                               TextTrimming="CharacterEllipsis"/>
                                    
                                    <!-- Character Details -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Text="Class:" FontWeight="SemiBold" 
                                                   Foreground="#7F8C8D"
                                                   FontSize="11"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                   Text="{Binding CharacterClass.Name}" 
                                                   Foreground="#2C3E50"
                                                   Margin="5,0,0,0"/>
                                        
                                        <TextBlock Grid.Row="1" Grid.Column="0"
                                                   Text="Race:" FontWeight="SemiBold" 
                                                   Foreground="#7F8C8D"
                                                   FontSize="11"
                                                   Margin="0,6,0,0"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1"
                                                   Text="{Binding CharacterRace.Name}" 
                                                   Foreground="#2C3E50"
                                                   Margin="5,6,0,0"/>
                                    </Grid>
                                    
                                    <!-- Level Badge -->
                                    <Border Background="#3498DB" 
                                            CornerRadius="20" 
                                            Padding="12,6"
                                            Width="80">
                                        <TextBlock Text="{Binding Level, StringFormat='Level {0}'}" 
                                                   Foreground="White" 
                                                   FontWeight="SemiBold"
                                                   FontSize="11"
                                                   TextAlignment="Center"/>
                                    </Border>
                                    
                                    <!-- Quick Stats -->
                                    <TextBlock Text="STR • CON • DEX" 
                                               Foreground="#7F8C8D"
                                               FontSize="10"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Content="New Character" 
                        Command="{Binding NewCharacterCommand}"
                        Padding="15,10" FontSize="12" 
                        Background="#27AE60"
                        Foreground="White"/>
                <Button Content="View Character" 
                        Command="{Binding ViewCharacterCommand}"
                        Padding="15,10" FontSize="12" 
                        Background="#9B59B6"
                        Foreground="White"/>
                <Button Content="Edit Selected" 
                        Command="{Binding EditCharacterCommand}"
                        Padding="15,10" FontSize="12" 
                        Background="#3498DB"
                        Foreground="White"/>
                <Button Content="Delete Selected" 
                        Command="{Binding DeleteCharacterCommand}"
                        Padding="15,10" FontSize="12"
                        Background="#E74C3C"
                        Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
