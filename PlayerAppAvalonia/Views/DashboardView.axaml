<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PlayerAppAvalonia.Views.DashboardView"
             Background="#F5F5F5">

    <Grid Background="#F5F5F5">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="500" Spacing="20">
            <TextBlock Text="Welcome to Chronicles of the Omuns" 
                       FontSize="32" FontWeight="Bold" 
                       Foreground="#2C3E50"
                       Margin="0,0,0,10"
                       TextAlignment="Center"/>
            
            <TextBlock Text="Manage your D&amp;D characters with ease" 
                       FontSize="14" Foreground="#7F8C8D" 
                       Margin="0,0,0,40"
                       TextAlignment="Center"/>
            
            <Button Content="Manage Characters" 
                    Padding="20,12" FontSize="14" 
                    Margin="0,0,0,30"
                    Background="#27AE60"
                    Foreground="White"
                    Command="{Binding GoToCharactersCommand}"/>

            <TextBlock Text="Database Setup:" FontSize="14" FontWeight="Bold" 
                       Foreground="#2C3E50"
                       Margin="0,20,0,15"/>
            <TextBlock Text="Load game data into the database" 
                       FontSize="12" Foreground="#7F8C8D" 
                       Margin="0,0,0,10"/>
            <StackPanel Orientation="Vertical" Spacing="8">
                <Button Content="Load All Classes" 
                        Command="{Binding LoadClassesCommand}"
                        Padding="15,10" FontSize="12" 
                        Background="#3498DB"
                        Foreground="White"/>
                <Button Content="Load All Races" 
                        Command="{Binding LoadRacesCommand}"
                        Padding="15,10" FontSize="12"
                        Background="#3498DB"
                        Foreground="White"/>
            </StackPanel>
            
            <TextBlock Text="{Binding StatusMessage}" 
                       FontSize="12" 
                       Foreground="#27AE60"
                       TextAlignment="Center"
                       Margin="0,15,0,0"
                       TextWrapping="Wrap"
                       FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</UserControl>
