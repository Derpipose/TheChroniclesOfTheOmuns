<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PlayerAppAvalonia.Views.EditCharacterView">

    <Grid Background="#F5F5F5">
        <ScrollViewer>
            <StackPanel MaxWidth="600" Margin="40" Spacing="15">
                <TextBlock Text="Edit Character" FontSize="28" FontWeight="Bold" 
                           Foreground="#2C3E50" Margin="0,0,0,20"/>

                <!-- Character Name -->
                <StackPanel Spacing="5">
                    <TextBlock Text="Character Name" FontWeight="SemiBold" Foreground="#2C3E50"/>
                    <TextBox Watermark="Enter character name" 
                             Text="{Binding Name}"
                             Padding="10,8" 
                             FontSize="14"/>
                </StackPanel>

                <!-- Class Selection -->
                <StackPanel Spacing="5">
                    <TextBlock Text="Class" FontWeight="SemiBold" Foreground="#2C3E50"/>
                    <ComboBox ItemsSource="{Binding Classes}" 
                              SelectedItem="{Binding SelectedClass}"
                              Padding="10,8" 
                              FontSize="14">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!-- Race Selection -->
                <StackPanel Spacing="5">
                    <TextBlock Text="Race" FontWeight="SemiBold" Foreground="#2C3E50"/>
                    <ComboBox ItemsSource="{Binding Races}" 
                              SelectedItem="{Binding SelectedRace}"
                              Padding="10,8" 
                              FontSize="14">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!-- Stats Section -->
                <TextBlock Text="Ability Scores (10-20)" FontSize="16" FontWeight="Bold" 
                           Foreground="#2C3E50" Margin="0,15,0,10"/>

                <Grid ColumnSpacing="10" RowSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Strength -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Strength" Foreground="#2C3E50"/>
                    <NumericUpDown Grid.Row="0" Grid.Column="1" 
                                   Value="{Binding Strength}" 
                                   Minimum="10" Maximum="20"/>

                    <!-- Constitution -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Constitution" Foreground="#2C3E50"/>
                    <NumericUpDown Grid.Row="1" Grid.Column="1" 
                                   Value="{Binding Constitution}" 
                                   Minimum="10" Maximum="20"/>

                    <!-- Dexterity -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Dexterity" Foreground="#2C3E50"/>
                    <NumericUpDown Grid.Row="2" Grid.Column="1" 
                                   Value="{Binding Dexterity}" 
                                   Minimum="10" Maximum="20"/>
                </Grid>

                <Grid ColumnSpacing="10" RowSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Intelligence -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Intelligence" Foreground="#2C3E50"/>
                    <NumericUpDown Grid.Row="0" Grid.Column="1" 
                                   Value="{Binding Intelligence}" 
                                   Minimum="10" Maximum="20"/>

                    <!-- Wisdom -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Wisdom" Foreground="#2C3E50"/>
                    <NumericUpDown Grid.Row="1" Grid.Column="1" 
                                   Value="{Binding Wisdom}" 
                                   Minimum="10" Maximum="20"/>

                    <!-- Charisma -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Charisma" Foreground="#2C3E50"/>
                    <NumericUpDown Grid.Row="2" Grid.Column="1" 
                                   Value="{Binding Charisma}" 
                                   Minimum="10" Maximum="20"/>
                </Grid>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,20,0,0">
                    <Button Content="Save" 
                            Command="{Binding SaveCommand}"
                            Padding="20,10" 
                            Background="#27AE60"
                            Foreground="White"
                            FontSize="14"/>
                    <Button Content="Cancel" 
                            Command="{Binding CancelCommand}"
                            Padding="20,10" 
                            Background="#95A5A6"
                            Foreground="White"
                            FontSize="14"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
