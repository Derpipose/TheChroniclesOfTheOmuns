@page "/new-character"
@using PlayerAppBlazor.ViewModels
@using Microsoft.AspNetCore.Components.Web
@inject NewCharacterViewModel Vm
@inject NavigationManager Nav
@implements IAsyncDisposable
@rendermode InteractiveServer

<PageTitle>New Character</PageTitle>

<div class="container mt-4">
    <h1>Create A New Character</h1>

    @if (!string.IsNullOrEmpty(Vm.StatusMessage))
    {
        <div class="alert alert-info">@Vm.StatusMessage</div>
    }

    <form>
        <!-- Character Name -->
        <div class="mb-3">
            <label for="characterName" class="form-label">Character Name</label>
            <input type="text" class="form-control" id="characterName" 
                   @bind="Vm.CharacterName" placeholder="Enter character name" />
        </div>

        <!-- Race Selection -->
        <div class="mb-3">
            <label for="raceSelect" class="form-label">Race (Optional)</label>
            <select class="form-select" id="raceSelect" @bind="Vm.SelectedRaceId">
                <option value="">-- Select a Race --</option>
                @foreach (var race in Vm.Races)
                {
                    <option value="@race.Id">@race.Name</option>
                }
            </select>
        </div>

        <!-- Class Selection -->
        <div class="mb-3">
            <label for="classSelect" class="form-label">Class (Optional)</label>
            <select class="form-select" id="classSelect" @bind="Vm.SelectedClassId">
                <option value="">-- Select a Class --</option>
                @foreach (var charClass in Vm.Classes)
                {
                    <option value="@charClass.Id">@charClass.Name</option>
                }
            </select>
        </div>

        <!-- Stats -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Character Stats</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="strength" class="form-label">Strength</label>
                        <input type="number" class="form-control" id="strength" min="1" max="18" @bind="Vm.Strength" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="constitution" class="form-label">Constitution</label>
                        <input type="number" class="form-control" id="constitution" min="1" max="18" @bind="Vm.Constitution" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="dexterity" class="form-label">Dexterity</label>
                        <input type="number" class="form-control" id="dexterity" min="1" max="18" @bind="Vm.Dexterity" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="wisdom" class="form-label">Wisdom</label>
                        <input type="number" class="form-control" id="wisdom" min="1" max="18" @bind="Vm.Wisdom" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="charisma" class="form-label">Charisma</label>
                        <input type="number" class="form-control" id="charisma" min="1" max="18" @bind="Vm.Charisma" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="intelligence" class="form-label">Intelligence</label>
                        <input type="number" class="form-control" id="intelligence" min="1" max="18" @bind="Vm.Intelligence" />
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="d-flex gap-2">
            <button type="button" class="btn btn-primary" @onclick="OnCreateClick" disabled="@(Vm.IsLoading || string.IsNullOrWhiteSpace(Vm.CharacterName))">
                @if (Vm.IsLoading) { <span>Creating...</span> } else { <span>Create Character</span> }
            </button>
            <a href="/characters" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        Vm.PropertyChanged += OnVmPropertyChanged;
        Vm.ResetForm();
        await Task.CompletedTask;
    }

    private void OnVmPropertyChanged(object? sender, System.ComponentModel.PropertyChangedEventArgs e)
    {
        StateHasChanged();
    }

    private async Task OnCreateClick(MouseEventArgs args)
    {
        var success = await Vm.CreateCharacterAsync();
        if (success)
        {
            await Task.Delay(1500);
            Nav.NavigateTo($"/character/{Vm.CreatedCharacterId}");
        }
    }

    async ValueTask IAsyncDisposable.DisposeAsync()
    {
        if (Vm != null)
        {
            Vm.PropertyChanged -= OnVmPropertyChanged;
        }
        await ValueTask.CompletedTask;
    }
}

